@*Define Model*@

@model List<eTickets.V8.Models.Actor>
@{
    ViewData["Title"] = "List of Actors";
}

<style>
    /* Responsive table for mobile */
    .table-responsive {
        overflow-x: auto;
    }

    @@media (max-width: 576px) {
        .table th, .table td {
            white-space: nowrap;
        }

        .table img {
            width: 60px !important;
            height: 60px !important;
        }
    }
</style>

<h2 class="mb-4">@ViewData["Title"]</h2>
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>ProfilePictureURL</th>
                <th>FullName</th>
                <th>Bio</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model)
            {
                <tr>
                    <td>
                        <img src="@actor.ProfilePictureURL" alt="@actor.FullName" class="img-fluid rounded-circle" style="width:100px; height:100px; object-fit:cover;" />
                    </td>
                    <td>@actor.FullName</td>
                    <td>@actor.Bio</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm mb-1" href="@Url.Action("Edit", "Actors", new { id = actor.Id })">Edit</a>
                        <a class="btn btn-outline-info btn-sm mb-1" asp-controller="Actors" asp-action="Detail" asp-route-id="@actor.Id">Details</a>
                        <a class="btn btn-danger btn-sm mb-1" href="@Url.Action("Delete", "Actors", new { id = actor.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"> <i class="bg-info bi-plus-circle"></i> Add New </a>
</div>


