@model eTickets.V8.Models.Actor

@{
    ViewData["Title"] = "Detail Actor";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <h1>Details Actor</h1>
        <form asp-controller="Actors" asp-action="Create">
            <div class="form-group text-center">
                <img id="ProfilePicturePreview"  />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProfilePictureURL" class="control-label">Profile Picture</label>
                <input asp-for="ProfilePictureURL" class="form-control" id="ProfilePictureInput" value="@Model.ProfilePictureURL" readonly />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" value="@Model.FullName" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-label">Biography</label>
                <input asp-for="Bio" class="form-control" value="@Model.Bio" readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
             </div>
            <div class="form-group">
                <a asp-controller="Actors" asp-action="Index" class="btn btn-outline-secondary">Show All</a>
                <a asp-controller="Actors" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success float-en">Edit</a>
                <!-- <input type="submit" value="Create" class="btn btn-outline-success float-end" /> -->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $("#ProfilePictureInput").on("input", function () {
                var url = $(this).val();
                $("#ProfilePicturePreview").attr("src", url);
            });
        });
    </script>
}
