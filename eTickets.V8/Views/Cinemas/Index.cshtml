@*Define Model*@

@model List<eTickets.V8.Models.Cinema>
@{
    ViewData["Title"] = "List of Producers";
}

<style>
    /* Responsive table for mobile */
    .table-responsive {
        overflow-x: auto;
    }

    @@media (max-width: 576px) {
        .table th, .table td {
            white-space: nowrap;
        }

        .table img {
            width: 60px !important;
            height: 60px !important;
        }
    }
</style>

<h2 class="mb-4">@ViewData["Title"]</h2>
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead class="table-light">
            <tr>
                <th>ProfilePictureURL</th>
                <th>FullName</th>
                <th>Bio</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td>
                        <img src="@cinema.Logo" alt="@cinema.Logo" class="img-fluid rounded-circle" style="width:100px; height:100px; object-fit:cover;" />
                    </td>
                    <td>@cinema.Name</td>
                    <td>@cinema.Description</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm mb-1" href="@Url.Action("Edit", "Actors", new { id = cinema.Id })">Edit</a>
                        <a class="btn btn-outline-info btn-sm mb-1" href="@Url.Action("Details", "Actors", new { id = cinema.Id })">Details</a>
                        <a class="btn btn-danger btn-sm mb-1" href="@Url.Action("Delete", "Actors", new { id = cinema.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


